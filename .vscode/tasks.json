{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Pull Latest Main",
      "type": "shell",
      "command": "git pull origin main", // Or 'git pull origin master' if your default branch is master
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always", // or "always" to see the output
        "panel": "shared"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": []
    }
  ]
}
